<div class="table">
    <input placeholder='search..' ng-model="searchText" class="bus-input">
    <br>
    <div class="loading" ng-show="loading" class="loading">Loading...<img src="http://jimpunk.net/Loading/wp-content/uploads/loading5.gif"></div>
    <ul ng-repeat="stop in stops.busNo | filter:searchText"  class="busTable">
        <a href="#/routes/{{stop.route}}/O">
            <li class="busNr">{{stop.route}}</li>
            <li class="routeName">{{stop.destination}}</li>
        </a>
    </ul>
</div>
